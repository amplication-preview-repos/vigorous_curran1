datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model FinancialData {
  createdAt   DateTime @default(now())
  expenses    Float?
  id          String   @id @default(cuid())
  income      Float?
  investments Float?
  updatedAt   DateTime @updatedAt
}

model Forecast {
  createdAt            DateTime @default(now())
  id                   String   @id @default(cuid())
  predictedExpenses    Float?
  predictedIncome      Float?
  predictedInvestments Float?
  updatedAt            DateTime @updatedAt
}

model Recommendation {
  additionalNotes    String?
  createdAt          DateTime                         @default(now())
  id                 String                           @id @default(cuid())
  recommendedActions String?
  riskTolerance      EnumRecommendationRiskTolerance?
  updatedAt          DateTime                         @updatedAt
}

enum EnumRecommendationRiskTolerance {
  Option1
}
